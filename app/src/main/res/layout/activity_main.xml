<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.drivewell.drivewell.datacollectionmodule.DataCollectionModule">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Switch
            android:id="@+id/swUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Upload Data  "
            android:textStyle="italic|bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Accelerometer"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAcceX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvAcceY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvAcceZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z axix"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Gyroscope"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGyroX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvGyroY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvGyroZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z axix"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Gravity"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGravityX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvGravityY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvGravityZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z axix"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Linear Acceleration"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLinearAcceX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvLinearAcceY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvLinearAcceZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z axix"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Rotation Vector"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRotationVecX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvRotationVecY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y axix"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvRotationVecZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z axix"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cbAccX"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ac"/>
            <CheckBox
                android:id="@+id/cbGyX"
                android:padding="2dp"
                android:text="Gy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbGrX"
                android:padding="2dp"
                android:text="Gr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbLrX"
                android:padding="2dp"
                android:text="Lr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbRtX"
                android:padding="2dp"
                android:text="Rt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch

                android:id="@+id/swPauseX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Pause  "
                android:textStyle="bold|italic"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartX"
            android:layout_width="match_parent"
            android:layout_height="300dp"
           />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cbAccY"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ac"/>
            <CheckBox
                android:id="@+id/cbGyY"
                android:padding="2dp"
                android:text="Gy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbGrY"
                android:padding="2dp"
                android:text="Gr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbLrY"
                android:padding="2dp"
                android:text="Lr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbRtY"
                android:padding="2dp"
                android:text="Rt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch
                android:id="@+id/swPauseY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Pause  "
                android:textStyle="bold|italic"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartY"
            android:layout_width="match_parent"
            android:layout_height="300dp"
             />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cbAccZ"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ac"/>
            <CheckBox
                android:id="@+id/cbGyZ"
                android:padding="2dp"
                android:text="Gy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbGrZ"
                android:padding="2dp"
                android:text="Gr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbLrZ"
                android:padding="2dp"
                android:text="Lr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cbRtZ"
                android:padding="2dp"
                android:text="Rt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

               <Switch
                   android:id="@+id/swPauseZ"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="   Pause  "
                   android:textStyle="bold|italic"/>/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartZ"
            android:layout_width="match_parent"
            android:layout_height="300dp"
             />
    </LinearLayout>
   </ScrollView>

